{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES3",
    "ignoreDeprecations": "5.0",
    "module": "ES6",
    "outDir": "./dist/",
    "noLib": true,
    "noEmit": false,
    "removeComments": true,
    "useDefineForClassFields": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": [
    "index.ts",
    "src"
  ]
}